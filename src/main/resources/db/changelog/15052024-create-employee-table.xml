<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="15052024-create-employee-table" author="Liubov Matveeva">
        <createTable tableName="employee" schemaName="public">
            <column name="id_employee" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="surname_employee" type="varchar(255)"/>
            <column name="name_employee" type="varchar(255)"/>
            <column name="patronymic_employee" type="varchar(255)"/>
            <column name="position_employee" type="varchar(255)"/>
            <column name="subdivision_id" type="uuid"/>

        </createTable>
        <addForeignKeyConstraint baseTableSchemaName="public"
                                 baseColumnNames="subdivision_id"
                                 baseTableName="employee"
                                 constraintName="fk_subdivision_id"
                                 referencedColumnNames="id_subdivision"
                                 referencedTableName="subdivision"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"/>
    </changeSet>

</databaseChangeLog>