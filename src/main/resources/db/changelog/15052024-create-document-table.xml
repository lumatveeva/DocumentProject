<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
<changeSet id="15052024-create-document-table" author="Liubov Matveeva">
    <createTable tableName="document" schemaName="public">
        <column name="id_document" type="uuid">
            <constraints primaryKey="true"/>
        </column>
        <column name="subject_document" type="varchar(255)"/>
        <column name="author_document" type="uuid"/>
        <column name="period_of_execution" type="date"/>
        <column name="text_document" type="varchar(255)"/>
        <column name="document_status" type="varchar(255)"/>
        <column name="document_done" type="boolean"/>
    </createTable>
    <addForeignKeyConstraint baseTableSchemaName="public"
                             baseColumnNames="author_document"
                             baseTableName="document"
                             constraintName="fk_author_document"
                             referencedColumnNames="id_employee"
                             referencedTableName="employee"
                             deferrable="false"
                             initiallyDeferred="false"
                             onDelete="NO ACTION"
                             onUpdate="NO ACTION"/>
</changeSet>

</databaseChangeLog>